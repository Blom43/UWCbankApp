<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UWCbankApp.MainPage">



    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="ABSA" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="Deposit Money" />
        
        <Entry Placeholder="Enter amount" />
        <Entry Placeholder="Reason for deposit" /> 
        <Button Text="Withdraw Money" />
        <Entry Placeholder="Enter amount" />
        <Entry Placeholder="Reason for withdraw" />
        <Button Text="Display Transactions" />

        
        
    </StackLayout>

</ContentPage>
